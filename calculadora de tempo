#include <stdio.h>

int main() {
    int segundos, horas, minutos, resto;

    printf("Digite a quantidade de segundos: ");
    scanf("%d", &segundos);

    horas = segundos / 3600;
    resto = segundos % 3600;
    minutos = resto / 60;
    resto = resto % 60;

    printf("%d segundos = %d horas, %d minutos e %d segundos\n",
           segundos, horas, minutos, resto);

    return 0;
}
